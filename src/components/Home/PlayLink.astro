<style>
  .play-tranquilidad {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 20px;
    padding: 20px;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .play-tranquilidad > span {
    color: var(--grey-color);
    transition: color 0.3s ease;
  }

  .play-tranquilidad:hover span {
    color: var(--orange-color-light);
  }

  .gradient-path {
    transition: fill 0.3s ease;
  }

  .play-tranquilidad:hover .gradient-path {
    /* fill: url("#gradient-hover"); */
  }

  .button-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: #e6ebeb;
    box-shadow:
      24px 24px 42px #c4c8c8,
      -24px -24px 42px #ffffff;
  }

  @media (min-width: 768px) {
    .play-tranquilidad {
      flex-direction: row;
    }
    .play-tranquilidad > span {
      font-size: 1.2rem;
    }
  }
</style>
