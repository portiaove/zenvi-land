---
import { Icon } from "astro-icon/components";

export interface Props {
  href: string;
  text: string;
  icon?: string;
  variant?: "default" | "orange";
}

const { href, text, icon = null, variant = "default" } = Astro.props as Props;
const iconSize = 18;
const buttonClass = variant === "orange" ? "button-link orange" : "button-link";
---

<a href={href} class={buttonClass}>
  {icon && <Icon name={icon} class="icon" size={iconSize} />}
  <span>{text}</span>
</a>

<style>
  .button-link {
    display: inline-flex;
    align-items: center;
    padding: 8px 16px;
    background-color: #f1f5f9;
    border-radius: 100px;
    text-decoration: none;
    color: #000;
    font-size: 14px;
    font-weight: 500;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .button-link:hover {
    background-color: var(--bg-color);
  }

  .button-link .icon {
    margin-right: 8px;
  }

  .button-link.orange {
    background-color: var(--orange-color);
    color: white;
  }
  .button-link.orange > span {
    font-weight: 400;
  }

  .button-link.orange:hover {
    background-color: var(--orange-color-light);
  }
</style>
